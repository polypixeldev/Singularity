{
	"compilerOptions": {
		"outDir": "./build",
		"allowJs": true,
		"target": "ES2022",
		"module": "esnext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmitHelpers": true,
		"importHelpers": true
	},
	"include": ["./src/**/*", "./lint-staged.config.js"],
	"exclude": ["./src/website/frontend/**/*"]
}
